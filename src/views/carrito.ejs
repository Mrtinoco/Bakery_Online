<!doctype html>
<html lang="en">
<%- include('_partials/head') %>
<body>
<!-- Preloader Start -->
<div id="preloader">
    <div class="preload-content">
        <div id="world-load"></div>
    </div>
</div>
<!-- Preloader End -->

<%- include('_partials/header',{req:req, activePage: "carrito"}) %>

<!-- ********** Hero Area Start ********** -->
<div class="hero-area height-600 bg-img background-overlay" style="background-image: url(/img/times_period.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="single-blog-title text-center">
                    <!-- Catagory -->
                    <div class="post-cta"><a href="#">Crea</a></div>
                    <h3>Hay que ser codicioso cuando los demás son temerosos y temerosos
                        cuando los demás son codiciosos</h3>
                    </p>
                    <p><h3>Warren Buffett</h3></p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ********** Hero Area End ********** -->

<div class="main-content-wrapper section-padding-0-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="title my-5">
                    <h2>Carrito de Compras</h2>
                    <a href="/orders/new" class="btn btn-outline-info btn-lg">Haz una nueva orden</a>
                </div>

                <% for(let order of orders) { %>
                    <!-- Single Blog Post -->
                    <div class="single-blog-post post-style-4 d-flex align-items-center wow fadeInUpBig"
                         data-wow-delay="0.2s">
                        <!-- Post Thumbnail -->
                        <div class="post-thumbnail">
                            <!-- div class="post-cta single-linear-post-category" -->
                                <img src='/img/posts/<%= order.imageurl %>' alt="">
                                <a href="#"><%= order.breadId %></a>
                                <a href="#"><%= order.extraId%></a>
                                <a href="#"><%= order.rellenoId %></a>
                                <a href="#"><%= order.glutenId %></a>
                                <a href="#"><%= order.payment %></a>
                            <!-- /div -->
                        </div>
                        <!-- Post Content -->
                        <div class="post-content w-100">
                            <div class="headline d-flex w-100 justify-content-between">
                                <a href="/orders/<%= order.id %>">
                                    <h5><%= order.id %></h5>
                                </a>
                                <div>
                                    <button type="submit" data-post-id="<%= order.id%>" class="btn btn-outline-danger deleteMyPost-big">Delete
                                    </button>
                                </div>
                            </div>
                            <!-- Post Meta -->
                            <div class="post-meta">
                                <p>
                                    <a href="#" class="post-author">
                                        <%= order.buyer.fullName %>

                                    </a> on <a href="#">
                                        <%= order.createdAt.toLocaleString() %>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>

                <% } %>

            </div>

            <% { %>
            <div class="container">
               <h5>Total a pagar:</h5>
               <h5> <%= pago %> </h5>
            </div>
            <% }%>

            <button id="pagarc" class="btn btn-outline-danger">>
                Pagar
            </button>

        </div>

    </div>
</div>

<script>
    let id = 4;
</script>

<% for(let order of orders) { %>
    <script>
    id = <%= order.buyer.id %>
    </script>
<% } %>



<!-- ***** Footer Area Start ***** -->
<script>
    const button = document.getElementById('pagarc');
    button.addEventListener('click', function(e) {
        const orderId = id;
        console.log(orderId);
        if (orderId) {
            const pagar = confirm('Estas seguro que deseas comprar todo?');
            if (pagar) {
                $.ajax({
                    url: `/carrito`,
                    data:  {orderId: orderId},
                    type: 'PATCH',
                })
                    .done(() => {
                        toastr.info('Su compra fue relizada!', 'Exito');
                        const blogItem = deleteButton.parents('div.single-blog-post');
                        if (blogItem) {
                            blogItem.remove()
                        }
                    })
                    .fail(err => {
                        DisplayMessagesFromRequestError(err, 'Ocurrio un error tratando de pagar!');
                        toastr.error('No se pudo pagar la orden!', 'Error')
                    })
            }
        }
    });

</script>
<%- include('_partials/footer') %>
</body>
</html>
