<!doctype html>
<html lang="en">
<%- include('_partials/head') %>
<body>
<!-- Preloader Start -->
<div id="preloader">
    <div class="preload-content">
        <div id="world-load"></div>
    </div>
</div>
<!-- Preloader End -->

<%- include('_partials/header',{req:req}) %>

<!-- ********** Hero Area Start ********** -->
<div class="hero-area height-600 bg-img background-overlay" style="background-image: url(/img/times_period.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="single-blog-title text-center">
                    <!-- Catagory -->
                    <div class="post-cta"><a href="#">Descubre</a></div>
                    <h3>Establecer metas es el primer paso para convertir lo invisible en visible.</h3>
                    </p>
                    <p><h3>Anthony Robbins</h3></p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ********** Hero Area End ********** -->

<div class="main-content-wrapper section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <!-- ============= Post Content Area ============= -->
            <div class="col-12 col-lg-8">
                <% if (post !== undefined && post !== null) { %>
                    <div class="single-blog-content mb-100">
                        <h2><%= post.title %></h2>
                        <!-- Post Meta -->
                        <div class="post-meta">
                            <p>
                                <a href="#" class="post-author">
                                    <%= post.author.fullName %></a> on
                                <a href="#" class="post-date">
                                    <%= new Date(post.createdAt).toLocaleString() %>
                                </a>
                            </p>
                        </div>
                        <!-- Post Content -->
                        <div class="post-content">
                            <img src="/img/posts/<%= post.imageUrl %>" class="my-3 border"
                                 alt="<%= post.title %> image">
                            <pre><%= post.content %></pre>
                            <!-- Post Tags -->
                            <ul class="post-tags">
                                <li><a href="#" class="bg-gray"><%= post.category.name %></a></li>
                            </ul>

                        </div>
                        <% if (isOwnerOrAdmin(post.author.id) ) { %>
                            <div class="my-4">
                                <a href="/posts/<%= post.id %>/edit" class="btn btn-outline-primary">Editar post</a>
                                <button type="submit" class="btn btn-outline-danger" data-post-id="<%= post.id %>"
                                        id="eliminar-post">Eliminar post
                                </button>
                            </div>
                        <% } %>
                    </div>
                <% } else  { %>
                    <div>
                        <h1 class="text-center">El post que buscas no existe!</h1>
                        <a href="/posts" class="btn btn-outline-dark btn-lg">Regresar a lista de Blogs</a>
                    </div>
                <% } %>
            </div>

            <!-- ========== Sidebar Area ========== -->
            <div class="col-12 col-md-8 col-lg-4">
                <div class="post-sidebar-area wow fadeInUpBig" data-wow-delay="0.2s">
                    <!-- Widget Area -->
                    <%- include('_partials/acerca_de_widget') %>
                    <!-- Widget Area -->
                    <div class="sidebar-widget-area">
                        <h5 class="title">Sigue conectado</h5>
                        <div class="widget-content">
                            <div class="social-area d-flex justify-content-center">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-google"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Widget Area -->
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="post-a-comment-area mt-10">
                    <h5>Deja tu Comentario</h5>
                    <!-- Contact Form -->
                    <form action="#" method="post" id="add-comment">
                        <input type="hidden" id="postId" name="postId" value="<%= post.id %>">
                        <input type="hidden" id="userFullName" name="userFullName" value="<%= req.user.fullName %>">
                        <div class="row">
                            <div class="col-12">
                                <div class="group">
                                    <textarea name="comment" id="comment" class="comment" required></textarea>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Escribe aqui tu comentario</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-outline-primary btn-lg">Guardar comentario</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-12 col-lg-8">
                <!-- Comment Area Start -->
                <div class="comment_area clearfix mt-70" id="comment_area">
                    <h3 class="text-black-50">Comentarios</h3>
                    <hr>
                    <% for (let comment of post.comments ) { %>
                        <ol class="mb-4">
                            <!-- Single Comment Area -->
                            <li class="single_comment_area">
                                <!-- Comment Content -->
                                <div class="comment-content">
                                    <!-- Comment Meta -->
                                    <div class="comment-meta d-flex align-items-center justify-content-between">
                                        <p>
                                            <a href="#" class="post-author text-info">
                                                <%= comment.author.fullName%>
                                            </a>
                                            creado <a href="#" class="post-date">
                                                <%= new Date(comment.createdAt).toLocaleString() %>
                                            </a>
                                        </p>
                                        <!--                                    <a href="#" class="comment-reply btn world-btn">Reply</a>-->
                                    </div>
                                    <p>
                                        <%= comment.comment %>
                                    </p>
                                </div>
                            </li>
                        </ol>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ***** Footer Area Start ***** -->
<%- include('_partials/footer') %>
</body>
</html>
